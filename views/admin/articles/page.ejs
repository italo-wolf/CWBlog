<%- include ../../partials/header.ejs %>
<%- include ../../partials/homenavBar.ejs %>

<body>
    <div class="container">
        <hr>
        <% result.articles.rows.forEach(article =>{%>
        <div class="card">
            <div class="card-header">
                <h3><%= article.title %></h3>
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="/<%=article.slug %>">Ler Artigo</a>
            </div>

        </div><br>
        <%}) %>
        <hr>
        <div class="row">
                <% if(result.page > 2){%>
                <div class="col col 12"><a style="float: left;" href="/articles/page/<%= result.page - 1 %>"><<< Prev</a></div>
                <%}else if(result.page == 2){%>
                    <div class="col col 12"><a style="float: left;" href="/"><<< Prev</a></div>
                <%}%>
            <% if(result.next){%>
            <div class="col col 12"><a style="float: right;" href="/articles/page/<%= result.page + 1 %>">Next>>></a></div>
            <%}%>
                </div>
                <hr>
        </div>

</body>

